rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // REGLA CRÍTICA: Permitir lectura de reservas para la API externa
    // Esta regla es necesaria para que el edge function pueda consultar las reservas
    match /reservations/{reservationId} {
      allow read: if true; // Acceso público de lectura para API externa
      allow write: if request.auth != null; // Solo usuarios autenticados pueden escribir
    }
    
    // REGLA OPCIONAL: Para acceso desde aplicaciones web autenticadas
    match /reservations/{reservationId} {
      allow read, write: if request.auth != null && 
        request.auth.uid != null; // Solo usuarios autenticados
    }
    
    // REGLA DE SEGURIDAD: Bloquear acceso a otros documentos sin autenticación
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}