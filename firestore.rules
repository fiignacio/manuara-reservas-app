rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura de reservas para la API externa
    match /reservations/{reservationId} {
      allow read: if true; // Permitir lectura desde la API externa
      allow write: if request.auth != null; // Solo usuarios autenticados pueden escribir
    }
    
    // Permitir operaciones en otros documentos solo para usuarios autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}